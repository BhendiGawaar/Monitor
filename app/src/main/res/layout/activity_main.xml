<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal.monitor.MainActivity">

    <TextView
        android:id="@+id/txtBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monitor App 1.3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <TextView
        android:text="Status: No Running Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtStatus"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <Button
        android:text="settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:id="@+id/btnSettings"
        android:elevation="0dp" />

    <Button
        android:text="Set Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:id="@+id/btnSetLoc"
        android:onClick="setLoc"
        />

    <Button
        android:text="Remove Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRemoveLoc"
        android:onClick="removeLoc"
        android:layout_alignBaseline="@+id/btnSetLoc"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/btnSetLoc"
        />

    <Button
        android:text="Alert Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlertPrefs"
        android:layout_below="@+id/txtStatus"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:text="Monitor Network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/btnConnect" />
</RelativeLayout>
